  { pregunta:"¿Qué club inglés tiene más títulos de Champions League?", opciones:["Liverpool","Manchester United","Chelsea","Nottingham Forest"], correcta:"Liverpool" },
  { pregunta:"¿Qué futbolista portugués ha ganado 5 Champions League?", opciones:["Cristiano Ronaldo","Eusébio","Pepe","Ricardo Carvalho"], correcta:"Cristiano Ronaldo" }
];

let indicePregunta = 0;
let contadorCorrectas = 0;

const preguntaEl = document.getElementById('pregunta');
const opcionesEl = document.getElementById('opciones');
const resultadoEl = document.getElementById('resultado');
const botonSiguiente = document.getElementById('boton-siguiente');

function cargarPregunta() {
  resultadoEl.textContent = '';
  botonSiguiente.style.display = 'none';

  const actual = preguntas[indicePregunta];
  preguntaEl.textContent = `${indicePregunta + 1}. ${actual.pregunta}`;

  opcionesEl.innerHTML = '';
  actual.opciones.forEach(opcion => {
    const btn = document.createElement('button');
    btn.textContent = opcion;
    btn.classList.add('opcion');
    btn.addEventListener('click', () => seleccionarRespuesta(btn, actual.correcta));
    opcionesEl.appendChild(btn);
  });
}

function seleccionarRespuesta(btn, correcta) {
  // Desactivar botones
  Array.from(opcionesEl.children).forEach(b => b.disabled = true);

  if (btn.textContent === correcta) {
    btn.style.backgroundColor = '#00e676'; // verde
    resultadoEl.textContent = '¡Correcto! 🎉';
    contadorCorrectas++;
  } else {
    btn.style.backgroundColor = '#ff1744'; // rojo
    resultadoEl.textContent = `Incorrecto 😞. La respuesta correcta es: "${correcta}".`;
    // Marcar la correcta
    Array.from(opcionesEl.children).forEach(b => {
      if (b.textContent === correcta) {
        b.style.backgroundColor = '#00e676';
      }
    });
  }

  botonSiguiente.style.display = 'inline-block';
}

botonSiguiente.addEventListener('click', () => {
  indicePregunta++;
  if (indicePregunta < preguntas.length) {
    cargarPregunta();
  } else {
    // Mostrar resultado final
    preguntaEl.textContent = `¡Has completado el trivia! 🎉 Respuestas correctas: ${contadorCorrectas} de ${preguntas.length}.`;
    opcionesEl.innerHTML = '';
    resultadoEl.textContent = '';
    botonSiguiente.style.display = 'none';
  }
});

// Iniciar juego
cargarPregunta();
</script>

</body>
